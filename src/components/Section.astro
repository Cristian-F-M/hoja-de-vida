---
const { title, id, class: className, icon: Icon } = Astro.props;
---

<section id={id} class:list={["mb-20", className]}>
  {
    title && (
      <h2 class="text-2xl inline-flex mb-2 gap-2 items-center  -ml-[6px]">
        {!Icon && title && (
          <span class="inline-block size-2 bg-gray-800 rounded-full" />
        )}
        {Icon && (
          <span class="inline-block -mt-[2px]">
            <Icon class="" />
          </span>
        )}
        {title}
      </h2>
    )
  }

  <div>
    <slot />
  </div>
</section>
