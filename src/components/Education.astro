---
import Section from "./Section.astro";
import School from "@icons/School.astro";

const EDUCATIONS = [
  {
    id: "cgao",
    instution: "Centro de Gestión Agroempresarial del Oriente",
    period: {
      start: "18/07/2022",
      end: '17/10/2024',
    },
    certificate: "Tecnología en Analisís y Desarrollo de Software",
  },
];
---

<Section title="Educación" icon={School} id="education">
  <div>
    {
      EDUCATIONS.reverse().map(({ id, instution, period, certificate }) => (
        <article class="flex flex-row justify-between" id={id}>
          <div>
            <h4 class="text-lg font-semibold text-gray-800">{instution}</h4>
            <h5 class="text-base text-gray-700 -mt-1">{certificate}</h5>
          </div>
          <span class="text-base text-gray-700">
            {period.start} - {period.end ? period.end : "Actualmente"}
          </span>
        </article>
        <span class={`w-full h-[1px] bg-gray-400 block mb-5 mt-2 no-print ${EDUCATIONS.length <= 1 ? "hidden" : ""}`} />
      ))
    }
  </div>
</Section>

<style>
  article {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>
