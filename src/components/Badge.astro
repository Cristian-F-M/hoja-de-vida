---
import type { Skill } from "types/Types";

const { class: className, data, onlyIcon = false, iconClass } = Astro.props;
const { name, icon: Icon } = data as Skill;
---

<span
  class={`badge inline-flex flex-row items-center gap-2 h-fit px-4 py-2 rounded-lg bg-gray-300/70 ${className ? className : ""}`}
>
  <Icon class={`${iconClass ? iconClass : ""} size-6 text-black`} />
  {!onlyIcon && <span>{name}</span>}
</span>

<style>
  @media print {
    .badge {
      padding: 0 4px;
      background-color: red;
    }
    svg {
      display: none !important;
    }
  }
</style>
